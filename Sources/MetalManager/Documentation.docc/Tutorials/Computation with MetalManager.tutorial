@Tutorial(time: 10) {
    @Intro(title: "Computation with MetalManager") {
        We will make the following code run on the GPU:
        ```swift
        let output = input.map { $0 * 2 }
        ```
        
        @Image(source: Metal_with_background.png, alt: "The Metal icon with background")
    }
    
